<div class="container">
  <div class="page-header">
    <h1>Blog</h1>
    <h4><span class="label label-primary">Aplikasi pertama Toy yang dibikin menggunakan Ruby on Rails dan Bootstrap</span></h4>
  </div>
</div>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="text-center">Title</th>
        <th class="text-center">Content</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td class="text-center">
            <%= link_to "Show", post_path(post), class: 'label label-info'%>
            <%= link_to "Edit", edit_post_path(post), class: 'label label-success'%>
            <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: 'label label-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>