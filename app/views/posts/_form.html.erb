<%= form_for(@posts) do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
    <br>
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
    <br>
    <%= f.submit 'Update Post', class: 'btn btn-success' %>
  </div>
<% end %>